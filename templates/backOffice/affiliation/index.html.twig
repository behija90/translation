{% extends 'backOffice/base.html.twig' %}

{% block body %}

    <div class="content-wrapper">
        <div class="row grid-margin">
            <div class="col-lg-12">
                <div class="portlet box">
                    <div class="portlet-header " >
                        <div class="caption" >قائمة المنخرطين </div>
                    </div>
                    <div class="portlet-body " dir="rtl">
                        <div class="row mbm" >
                            <div class="col-lg-12">
                                {% for message in app.flashes('msgSuccess') %}
                                    <div class="alert alert-success">
                                        {{ message }}
                                    </div>
                                {% endfor %}
                                <div class="table-responsive">
                                    <table id="table_id"
                                           class="table table-hover table-striped table-bordered table-advanced tablesorter display" dir="rtl" >
                                        <thead >
                                        <tr>
                                            <th>عدد الانخراط</th>
                                            <th>الاسم واللقـــب</th>
                                            <th width="25%">Actions</th>
                                        </tr>
                                        <tbody>
                                        {% for affiliation in affiliations %}
                                            <tr>
                                                <td>
                                                    {{ affiliation.id }}
                                                </td>
                                                <td>{{ affiliation.nomPrenom }}</td>

                                                <td>
                                                    <a href="{{ path('back_affiliation_pdf', {'id': affiliation.id}) }}" target="_blank">
                                                        <i class="fa fa-file-pdf-o text-danger fa-2"></i>
                                                    </a>
                                                </td>
                                            </tr>


                                        {% endfor %}
                                        </tbody>

                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>


{% endblock %}