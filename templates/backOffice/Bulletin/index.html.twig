{% extends 'backOffice/base.html.twig' %}

{% block body %}

    <div class="content-wrapper" dir="rtl">
        <div class="row grid-margin">
            <div class="col-lg-12">
                <div class="portlet box">
                    <div class="portlet-header" >
                        <div class="caption" >Listes des bulletins d'information</div>
                    </div>
                    <div class="portlet-body" >
                        <div class="row mbm">
                            <div class="col-lg-12">
                                {% for message in app.flashes('msgSuccess') %}
                                    <div class="alert alert-success">
                                        {{ message }}
                                    </div>
                                {% endfor %}
                                <div class="table-responsive" >
                                    <table id="table_id"
                                           class="table table-hover table-striped table-bordered table-advanced tablesorter display">
                                        <thead>
                                        <tr>
                                            <th >النشرية </th>
                                            <th >عنوان النشرية</th>
                                            <th >النسخة العربية </th>
                                            <th >النسخة الأنجلزية </th>
                                            <th >تاريخ التسجيل</th>
                                            <th >نشر </th>
                                            <th >Actions</th>
                                        </tr>
                                        <tbody>
                                        {% for bulletin in bulletins %}
                                            <tr>
                                                <td><i class="fa fa-file-pdf-o" style="font-size:40px;color:red"></i></td>
                                                <td>{{ bulletin.titreAr }}</td>
                                                <td>
                                                <a href="{{ path('bulletin_voir', {'id': bulletin.id, 'lang': 'ar'}) }}" class="lien">انقر هنا للمزيد من المعلومات </a>
                                                </td>
                                                <td>
                                                    <a href="{{ path('bulletin_voir', {'id': bulletin.id, 'lang': 'en'}) }}" class="link">Click here for more information</a>
                                                </td>
                                                <td >{{ bulletin.dateAt|date('d/m/Y') }}</td>
                                                <td>
                                                    {% if bulletin.publier %}
                                                        <a href="{{ path('bulletin_publier', {'id': bulletin.id}) }}"
                                                           class="btn btn-success btn-xs" title="Activé">
                                                            <i class="fa fa-check"></i>
                                                        </a>
                                                    {% else %}
                                                        <a href="{{ path('bulletin_publier', {'id': bulletin.id}) }}"
                                                           class="btn btn-danger btn-xs" title="Désactivé">
                                                            <i class="fa fa-times"></i>
                                                        </a>
                                                    {% endif %}
                                                </td>


                                                <td>
                                                    {#<a href="{{ path('bulletin_ajouter', {'id': bulletin.id}) }}">#}
                                                        {#<button type="button" class="btn btn-info btn-xs mbs"><i#}
                                                                    {#class="fa fa-plus"></i>&nbsp;#}
                                                            {#Add#}
                                                        {#</button>#}
                                                    {#</a>#}

                                                            {#<a href="#">#}
                                                                {#<i class="fa fa-cog btn btn-primary btn-xs"></i>#}
                                                            {#</a>#}
                                                        {#<ul class= "dropdown-menu pull-right">#}
                                                            {#<li>#}
                                                                <a href="{{ path('bulletin_modifier', {'id': bulletin.id}) }}" >
                                                                    <button type="button" class="btn btn-success btn-xs mbs"><i
                                                                                class="fa fa-edit"></i>&nbsp;
                                                                        تحيين
                                                                    </button>
                                                                </a>
                                                            {#</li>#}

                                                            {#<li>#}
                                                                <a href="{{ path('bulletin_supprimer', {'id': bulletin.id}) }}">
                                                                    <button type="button" class="btn btn-danger btn-xs mbs"><i
                                                                                class="fa fa-trash-o"></i>&nbsp;
                                                                        حذف
                                                                    </button>
                                                                </a>
                                                            {#</li>#}

                                                        {#</ul>#}





                                                </td>



                                            </tr>


                                        {% endfor %}
                                        </tbody>

                                        </thead>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>

{% endblock body %}