{% extends 'backOffice/base.html.twig' %}

{% block body %}

    <div class="content-wrapper">
        <div class="row grid-margin">
            <div class="col-lg-12">
                <div class="portlet box">
                    <div class="portlet-header">
                        <div class="caption">Liste news</div>
                    </div>
                    <div class="portlet-body">
                        <div class="row mbm">
                            <div class="col-lg-12">
                                {% for message in app.flashes('msgSuccess') %}
                                    <div class="alert alert-success">
                                        {{ message }}
                                    </div>
                                {% endfor %}
                                <div class="table-responsive">
                                    <table id="table_id"
                                           class="table table-hover table-striped table-bordered table-advanced tablesorter display">
                                        <thead>
                                        <tr>
                                            {#<th>Photo</th>#}
                                            <th>Titre Arabe</th>
                                            <th>News arabe</th>
                                            <th>News arabe</th>
                                            <th>Date</th>
                                            <th>Publier</th>
                                            <th width="25%">Actions</th>
                                        </tr>
                                        <tbody>
                                        {% for news in news %}
                                            <tr>


                                               {# <td>
                                                    <img src="{{ asset(news.image.webPath|imagine_filter('image_100_100')) }}" ></td>#}
                                                <td>{{ news.titreNewAr }}</td>
                                                <td>
                                                    <a href="{{ path('news_voir', {'id': news.id, 'lang': 'ar'}) }}"
                                                       style="color: #0f57a3">contenu
                                                        Arabe</a></td>
                                                <td>
                                                    <a href="{{ path('news_voir', {'id': news.id, 'lang': 'en'}) }}">contenu
                                                        English</a></td>
                                                <td>{{ news.dateNew|date('d/m/Y') }}</td>
                                                <td>
                                                    {% if news.publier %}
                                                        <a href="{{ path('news_publier', {'id': news.id}) }}"
                                                           class="btn btn-success btn-xs" title="Activé">
                                                            <i class="fa fa-check"></i>
                                                        </a>
                                                    {% else %}
                                                        <a href="{{ path('news_publier', {'id': news.id}) }}"
                                                           class="btn btn-danger btn-xs" title="Désactivé">
                                                            <i class="fa fa-times"></i>
                                                        </a>
                                                    {% endif %}
                                                </td>
                                                <td>
                                                    {#<a href="{{ path('news_ajouter', {'id': news.id}) }}">#}
                                                        {#<button type="button" class="btn btn-info btn-xs mbs"><i#}
                                                                    {#class="fa fa-plus"></i>&nbsp;#}
                                                            {#Add#}
                                                        {#</button>#}
                                                    {#</a>#}

                                                    <a href="{{ path('news_modifier', {'id': news.id}) }}">
                                                        <button type="button" class="btn btn-success btn-xs mbs"><i
                                                                    class="fa fa-edit"></i>&nbsp;
                                                            Edit
                                                        </button>
                                                    </a>
                                                    <a href="{{ path('news_supprimer', {'id': news.id}) }} "
                                                       class="confirm-supp">
                                                        <button type="button" class="btn btn-danger btn-xs mbs"><i
                                                                    class="fa fa-trash-o"></i>&nbsp;
                                                            Delete
                                                        </button>
                                                    </a>

                                                </td>


                                            </tr>


                                        {% endfor %}
                                        </tbody>

                                        </thead>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>


{% endblock %}