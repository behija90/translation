{% extends 'backOffice/base.html.twig' %}

{% block body %}

    <div class="content-wrapper" dir="rtl">
        <div class="row grid-margin">
            <div class="col-lg-12">
                <div class="portlet box">
                    <div class="portlet-header">
                        <div class="caption"><a href="{{ path('news_liste') }}"  ><i class="fa fa-mail-reply" style="color: red" ></i></a>Détaille de news arabe </div>
                    </div>
                    <div class="portlet-body">
                        <div class="row mbm">
                            <div class="col-lg-12">
                                {% for message in app.flashes('msgSuccess') %}
                                    <div class="alert alert-success">
                                        {{ message }}
                                    </div>
                                {% endfor %}
                                <div class="table-responsive" >
                                    <table id="table_id"
                                           class="table table-hover table-striped table-bordered table-advanced tablesorter display">
                                        <thead>
                                        <tr>
                                            <th >ID</th>
                                            <th >Titre Arabe</th>
                                            <th >Contenu Arabe</th>
                                            <th >Lien fb Arabe</th>
                                            <th >Photo</th>
                                            <th >Date</th>
                                            <th >Publier</th>
                                            <th >Actions</th>
                                        </tr>
                                        <tbody>

                                            <tr>

                                                <td>{{ news.id }}</td>
                                                <td>{{ news.titreNewAr }}</td>
                                                <td>{{ news.contenuAr }}</td>
                                                <td>{{ news.lienFbAr }}</td>
                                                <td> <img src="{{ asset(news.webPath) }}" width="75" height="60"></td>
                                                <td>{{ news.dateNew|date('d/m/Y') }}</td>
                                                <td>
                                                    {% if news.publier %}
                                                        <a href="{{ path('news_publier', {'id': news.id}) }}"
                                                           class="btn btn-success btn-xs" title="Activé">
                                                            <i class="fa fa-check"></i>
                                                        </a>
                                                    {% else %}
                                                        <a href="{{ path('news_publier', {'id': news.id}) }}"
                                                           class="btn btn-danger btn-xs" title="Désactivé">
                                                            <i class="fa fa-times"></i>
                                                        </a>
                                                    {% endif %}
                                                </td>
                                                <td>
                                                   {# <a href="{{ path('news_ajouter', {'id': news.id}) }}">
                                                        <button type="button" class="btn btn-info btn-xs mbs"><i
                                                                    class="fa fa-plus"></i>&nbsp;
                                                            Add
                                                        </button>
                                                    </a>#}

                                                    <a href="{{ path('news_modifier', {'id': news.id}) }}" >
                                                        <button type="button" class="btn btn-success btn-xs mbs"><i
                                                                    class="fa fa-edit"></i>&nbsp;
                                                            Edit
                                                        </button>
                                                    </a>
                                                    <a href="{{ path('news_supprimer', {'id': news.id}) }} " class="confirm-supp">
                                                        <button type="button" class="btn btn-danger btn-xs mbs"><i
                                                                    class="fa fa-trash-o"></i>&nbsp;
                                                            Delete
                                                        </button>
                                                    </a>
                                                </td>



                                            </tr>



                                        </tbody>

                                        </thead>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>


{% endblock %}