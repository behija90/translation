{% extends 'frontOffice/base.html.twig' %}
{% block page_title %}الأخبار  {% endblock %}

{% block body %}

    <div class="blog-page-area">
        <div class="container">
            <div class="row">
                {% for news in newss %}
                    <div class="col-lg-12 col-md-12 col-sm-6 col-xs-12">
                        <ul>
                            <li>
                                  <div class="col-lg-6 col-md-6 col-sm-4 col-xs-12 float-rtl first-col">
                                    <div class="blog-image">
                                        <a href="{{ path('front_news_index', {'slug': news.slugAr}) }}">
                                            <img src="{{ asset(news.image.webPath|imagine_filter('image_300_300')) }}" alt="{{ news.titreNewAr }}"
                                                 title="{{ news.titreNewAr }}">
                                        </a>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 float-rtl last-col">
                                    <span class="date"> <i
                                                class="fa fa-calendar-check-o"> </i>{{ news.dateNew|date('Y-m-d') }}</span>
                                    <h3><a href="{{ path('front_news_voir', {'slug': news.slugAr}) }}">{{ news.titreNewAr }}</a></h3>
                                    <p>{{ news.contenuAr|slice(0,400) }}...</p>
                                    <a href="{{ path('front_news_voir', {'slug': news.slugAr}) }}" class="more">إقرأ المزيد  <i class="fa fa-angle-double-right"></i></a>
                                </div>
                            </li>
                        </ul>
                    </div>
                {% endfor %}
            </div>

            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">
                    {{ knp_pagination_render(newss) }}
                </div>
            </div>

        </div>
    </div>

{% endblock %}