{% extends 'frontOffice/base.html.twig' %}
{% block page_title %}الانشطة والبرامج{% endblock %}

{% block body %}

    <div class="blog-page-area gallery-page category-page">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12 float-rtl first-col">
                    <div class="row">
                        <ul>
                            <li>
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div id="news-Carousel1" class="carousel carousel-top-category slide"
                                         data-ride="carousel">
                                        <!-- Wrapper for slides -->
                                        <!-- Left and right controls -->
                                        <div class="next-prev">
                                            <a class="left news-control" href="#news-Carousel1" data-slide="prev">
                                                <span class="news-arrow-left"><i class="fa fa-angle-left"></i></span>
                                            </a>
                                            <a class="right news-control" href="#news-Carousel1" data-slide="next">
                                                <span class="news-arrow-right"><i class="fa fa-angle-right"></i></span>
                                            </a>
                                        </div>
                                        <div class="carousel-inner">
                                            <div class="item active">
                                                <div class="blog-image">
                                                    <img src="{{ asset(activite.image.webPath|imagine_filter('image_770_470')) }}"
                                                         alt="{{ activite.titreAr }}"
                                                         title="{{ activite.titreAr }}">
                                                </div>
                                            </div>
                                            {% for image in activite.images %}
                                            <div class="item">
                                                <div class="blog-image">
                                                    <img src="{{ asset(image.webPath|imagine_filter('image_770_470')) }}"
                                                         alt="{{ activite.titreAr }}"
                                                         title="{{ activite.titreAr }}">
                                                </div>
                                            </div>
                                            {% endfor %}
                                        </div>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="single-blog-page-area" style="padding-top: 0">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12 float-rtl first-col mb-md-30">


                    <h3>{{ activite.titreAr }}</h3>
                    <p>{{ activite.contenuAr }}</p>


                    {% if activite.videos|length > 0 %}
                        <div class="like-section">
                            <h3 class="title-bg">Videos</h3>
                            <div class="row">
                                {% for video in activite.videos %}
                                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                        <div class="popular-post-img">
                                            <iframe width="" height="200" style="width: 100%"
                                                    src="https://www.youtube.com/embed/{{ video.identif }}">
                                            </iframe>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    {% endif %}
                </div>

            </div>
        </div>
    </div>

{% endblock %}