{% extends 'frontOffice/base.html.twig' %}
{% block page_title %}الانشطة والبرامج{% endblock %}

{% block body %}

    <div class="blog-page-area">
        <div class="container">
            <div class="row">
                {% for activite in activites %}
                    <div class="col-lg-12 col-md-12 col-sm-6 col-xs-12">
                        <ul>
                            <li>
                                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 float-rtl first-col">
                                    <div class="blog-image">
                                        <a href="{{ path('front_activites_voir', {'slug': activite.slugAr}) }}">
                                            <img src="{{ asset(activite.image.webPath|imagine_filter('image_300_300')) }}" alt="{{ activite.titreAr }}"
                                                 title="{{ activite.titreAr }}">
                                        </a>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-8 col-xs-12 float-rtl last-col">
                                    <span class="date"> <i
                                                class="fa fa-calendar-check-o"> </i>{{ activite.date|date('Y-m-d') }}</span>
                                    <h3><a href="{{ path('front_activites_voir', {'slug': activite.slugAr}) }}">{{ activite.titreAr }}</a></h3>
                                    <p>{{ activite.contenuAr|slice(0,400) }}...</p>
                                    <a href="{{ path('front_activites_voir', {'slug': activite.slugAr}) }}" class="more">إقرأ المزيد  <i class="fa fa-angle-double-right"></i></a>
                                </div>
                            </li>
                        </ul>
                    </div>
                {% endfor %}
            </div>

            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">
                    {{ knp_pagination_render(activites) }}
                </div>
            </div>

        </div>
    </div>

{% endblock %}