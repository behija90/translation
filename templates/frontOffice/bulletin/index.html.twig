{% extends 'frontOffice/base.html.twig' %}
{% block body %}
    <div class="blog-page-area">

        <div class="container">

            <div class="row">
                {% for bulletin in bulletins %}
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 pull-right">
                        <ul>
                            <li>
                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 float-rtl first-col">

                                    <div class="blog-image">
                                        <a href="#">
                                            <i class="fa fa-link"></i>
                                            <img src="{{ asset('frontOffice/images/bulletin/pdf.jpg') }}"
                                                 alt="{{ bulletin.titreAr }}">
                                        </a>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 float-rtl last-col">
                                    <span class="date"> <i class="fa fa-calendar-check-o"> </i>{{ bulletin.dateAt|date('Y-m-d') }}</span>
                                    <h3><a href="#">{{ bulletin.titreAr }}</a></h3>
                                    <p>{{ bulletin.descriptionAr|slice(0,120) }}</p>
                                    <a href="#" class="more">إقرأ المزيد <i class="fa fa-angle-double-right"></i></a>
                                </div>
                            </li>
                        </ul>
                    </div>
                {% endfor %}
            </div>

            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">
                    {{ knp_pagination_render(bulletins) }}
                </div>
            </div>

        </div>
    </div>
{% endblock %}