{% extends 'frontOffice/base.html.twig' %}
{% block page_title %}اتصل بنا{% endblock %}
{% block body %}

    <div class="single-blog-page-area contact-page-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12 float-rtl first-col">
                    <div class="author-comment">
                    <div class="leave-comments-area" id="#form-contact">
                        <h1 class="title-bg">إتصل بنا</h1>
                        <br>
                        <div id="form-messages"></div>
                        {% for message in app.flashes('msgSuccess') %}
                            <div class="alert alert-success">
                                {{ message }}
                            </div>
                        {% endfor %}
                        {{ form_start(form) }}

                        <fieldset>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        {{ form_row(form.email) }}
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        {{ form_row(form.nomPrenom) }}
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        {{ form_row(form.telephone) }}
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        {{ form_row(form.sujet) }}
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        {{ form_row(form.message) }}
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <button class="btn-send" type="submit">إرسال </button>
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                        {{ form_end(form) }}
                    </div>
                </div>
